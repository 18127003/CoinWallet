<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".ui.fragments.MnemonicFragment">
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="parent"
				android:id="@+id/mnemonic_card"
				android:layout_margin="20dp">
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/h6.black"
					android:layout_margin="15dp"
					android:id="@+id/mnemonic"/>
		</com.google.android.material.card.MaterialCardView>
		<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:layout_marginHorizontal="20dp"
				style="@style/h6.white"
				android:text="Write down or save as you wish"
				android:id="@+id/notice_text"
				app:layout_constraintTop_toBottomOf="@id/mnemonic_card"/>
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/save_mnemonic_button"
				app:layout_constraintTop_toBottomOf="@id/notice_text"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				android:layout_marginTop="15dp"
				style="@style/ButtonStyle"
				android:text="@string/save"
				android:clickable="false"/>
	</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>