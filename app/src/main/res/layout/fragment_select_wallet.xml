<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.fragments.SelectWalletFragment"
             xmlns:app="http://schemas.android.com/apk/res-auto">

	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<TextView
				android:id="@+id/choose_wallet_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				android:text="@string/welcome_text"
				android:layout_marginTop="30dp"
				style="@style/h5.reflect"/>
		<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/wallet_info_list"
				android:layout_marginTop="64dp"
				android:layout_marginHorizontal="20dp"

				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toTopOf="@id/choose_wallet_text"/>
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/create_wallet_btn"
				android:text="@string/create_btn_label"
				android:layout_marginVertical="20dp"
				app:layout_constraintTop_toBottomOf="@id/wallet_info_list"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toLeftOf="@id/restore_wallet_btn"
				style="@style/ButtonStyle"
				/>
		<Button
				android:layout_marginVertical="20dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/restore_wallet_btn"
				android:text="@string/restore_btn_label"
				app:layout_constraintTop_toBottomOf="@+id/wallet_info_list"
				app:layout_constraintLeft_toRightOf="@id/create_wallet_btn"
				app:layout_constraintRight_toRightOf="parent"
				style="@style/ButtonStyle"
				/>
	</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>