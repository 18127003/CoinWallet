<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingHorizontal="20dp"
              android:paddingTop="20dp"
>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/last_transaction"
              style="@style/h5.reflect"
              android:paddingBottom="15dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/h6.reflect"
            android:text="@string/latest_tx_placeholder"
            android:id="@+id/latest_tx_placeholder"/>
    <include
            android:id="@+id/transaction_item"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            layout="@layout/transaction_item_card"
            android:visibility="gone"
    />
</LinearLayout>