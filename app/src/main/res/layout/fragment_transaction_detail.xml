<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.fragments.TransactionDetailFragment"
             xmlns:app="http://schemas.android.com/apk/res-auto">
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="64dp">
		<com.google.android.material.card.MaterialCardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_margin="20dp"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				android:id="@+id/transaction_info_card">
			<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="10dp">
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						app:layout_constraintTop_toTopOf="parent"
						android:id="@+id/tx_id_info">
					<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:background="@drawable/ic_send"
							android:id="@+id/tx_in_or_out"
							android:layout_marginEnd="15dp"
							android:layout_gravity="center_vertical"/>
					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							>
						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								style="@style/h5"
								android:id="@+id/type"
								/>
						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:id="@+id/amount"
								style="@style/h6"/>
						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:id="@+id/tx_id"
								/>
					</LinearLayout>
				</LinearLayout>


				<androidx.appcompat.widget.AppCompatButton
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:layout_constraintTop_toBottomOf="@id/tx_id_info"
						app:layout_constraintLeft_toLeftOf="parent"
						app:layout_constraintRight_toRightOf="parent"
						android:id="@+id/tx_status_text"
						android:clickable="false"

						android:drawableStart="@drawable/ic_done"
						android:drawablePadding="5dp"
						android:gravity="left|center_vertical"
						android:paddingHorizontal="10dp"
						android:paddingVertical="0dp"
						android:layout_marginVertical="10dp"
						android:layout_marginTop="8dp"/>
				<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:layout_constraintLeft_toLeftOf="parent"
						app:layout_constraintRight_toRightOf="parent"
						app:layout_constraintTop_toBottomOf="@id/tx_status_text"
						android:id="@+id/tx_time_layout"
						android:paddingTop="10dp"
				>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/tx_update_time"
							android:layout_alignParentStart="true"
							android:layout_centerVertical="true"
							style="@style/h6"
							android:paddingBottom="5dp"/>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/tx_time"
							android:layout_alignParentEnd="true"
							android:layout_centerVertical="true"
							android:paddingBottom="5dp"
							/>
					<View
							android:layout_marginHorizontal="5dp"
							android:layout_width="match_parent"
							android:layout_height="0.5dp"
							android:background="@android:color/darker_gray"
							android:layout_alignBottom="@id/tx_time"/>
				</RelativeLayout>
				<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:layout_constraintLeft_toLeftOf="parent"
						app:layout_constraintRight_toRightOf="parent"
						app:layout_constraintTop_toBottomOf="@id/tx_time_layout"
						android:id="@+id/source_layout">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/from"
							android:layout_alignParentStart="true"
							android:layout_centerVertical="true"
							style="@style/h6"
							android:paddingBottom="5dp"/>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/source"
							android:layout_alignParentEnd="true"
							android:layout_centerVertical="true"
							android:paddingBottom="5dp"
							/>
					<View
							android:layout_marginHorizontal="5dp"
							android:layout_width="match_parent"
							android:layout_height="0.5dp"
							android:background="@android:color/darker_gray"
							android:layout_alignBottom="@id/source"/>
				</RelativeLayout>
				<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:layout_constraintLeft_toLeftOf="parent"
						app:layout_constraintRight_toRightOf="parent"
						app:layout_constraintTop_toBottomOf="@id/source_layout"
						android:id="@+id/fee_layout">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/fee"
							android:layout_alignParentStart="true"
							android:layout_centerVertical="true"
							style="@style/h6"
							android:paddingBottom="5dp"/>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/fee"
							android:layout_alignParentEnd="true"
							android:layout_centerVertical="true"
							android:paddingBottom="5dp"
							/>
					<View
							android:layout_marginHorizontal="5dp"
							android:layout_width="match_parent"
							android:layout_height="0.5dp"
							android:background="@android:color/darker_gray"
							android:layout_alignBottom="@id/fee"/>
				</RelativeLayout>
				<RelativeLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:layout_constraintLeft_toLeftOf="parent"
						app:layout_constraintRight_toRightOf="parent"
						app:layout_constraintTop_toBottomOf="@id/fee_layout"
						android:id="@+id/conf_layout">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/confirmation"
							android:layout_alignParentStart="true"
							android:layout_centerVertical="true"
							style="@style/h6"
							android:paddingBottom="5dp"/>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/conf"
							android:layout_alignParentEnd="true"
							android:layout_centerVertical="true"
							android:paddingBottom="5dp"
							/>
					<View
							android:layout_marginHorizontal="5dp"
							android:layout_width="match_parent"
							android:layout_height="0.5dp"
							android:background="@android:color/darker_gray"
							android:layout_alignBottom="@id/conf"/>
				</RelativeLayout>
			</androidx.constraintlayout.widget.ConstraintLayout>
		</com.google.android.material.card.MaterialCardView>
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toBottomOf="@id/transaction_info_card"
				android:padding="20dp"
				android:orientation="vertical">
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/more_info"
					style="@style/h5.reflect"/>
			<com.google.android.material.card.MaterialCardView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="10dp"
					android:layout_marginTop="10dp">
				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:layout_constraintLeft_toLeftOf="parent"
						app:layout_constraintRight_toRightOf="parent"
						app:layout_constraintTop_toBottomOf="@id/source_layout"
						android:orientation="vertical"
						android:padding="10dp">
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/address"
							android:layout_alignParentStart="true"
							android:layout_centerVertical="true"
							style="@style/h6"
							android:paddingBottom="5dp"/>
					<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/address"
							android:layout_alignParentEnd="true"
							android:layout_centerVertical="true"
							android:paddingBottom="5dp"
							/>
				</LinearLayout>
			</com.google.android.material.card.MaterialCardView>
		</LinearLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>