<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.fragments.HomeFragment">
	<androidx.core.widget.NestedScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginBottom="100dp"
				android:orientation="vertical">
			<include
					android:id="@+id/function_card"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					layout="@layout/home_function_card"
					android:layout_marginBottom="10dp"
					/>
			<include
					android:id="@+id/card_manage_balance"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					layout="@layout/manage_balance_card"
					/>
			<include
					android:id="@+id/coin_market_cap"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					layout="@layout/coin_market_short"
					/>
			<include
					android:id="@+id/card_latest_transaction"
					android:layout_height="wrap_content"
					android:layout_width="match_parent"
					layout="@layout/latest_transaction_card"
					/>
		</LinearLayout>
	</androidx.core.widget.NestedScrollView>
</FrameLayout>