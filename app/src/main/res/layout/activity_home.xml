<?xml version="1.0" encoding="utf-8"?>
<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".ui.activities.HomeActivity">
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/test_btn"
				android:text="Test"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				/>
		<TextView
				android:id="@+id/wallet_key"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="15dp"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"/>
		<TextView
				android:id="@+id/balance_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/balance_label"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/wallet_key"/>
		<TextView
				android:id="@+id/balance"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintTop_toBottomOf="@id/balance_label"/>

		<Button
				android:id="@+id/send_page_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/send_button_label"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@+id/balance"
				app:layout_constraintRight_toLeftOf="@+id/market_cap_button"
				app:layout_constraintLeft_toLeftOf="parent"
				/>

		<Button
				android:id="@+id/market_cap_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/market_cap_button_label"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@+id/balance"
				app:layout_constraintLeft_toRightOf="@+id/send_page_button"
				app:layout_constraintRight_toRightOf="parent"
				/>

		<Button
				android:id="@+id/utxo_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/check_utxo_button_label"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@+id/send_page_button"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toLeftOf="@+id/extract_mnemonic_button"
				/>
		<Button
				android:id="@+id/extract_mnemonic_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/extract_mnemonic_button_label"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@+id/market_cap_button"
				app:layout_constraintLeft_toRightOf="@+id/utxo_button"
				app:layout_constraintRight_toRightOf="parent"
				/>

		<Button
				android:id="@+id/encrypt_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Encrypt"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@+id/utxo_button"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toLeftOf="@+id/encrypt_check_button"
				/>
		<Button
				android:id="@+id/encrypt_check_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Check encrypt"
				android:layout_marginTop="15dp"
				app:layout_constraintTop_toBottomOf="@+id/extract_mnemonic_button"
				app:layout_constraintLeft_toRightOf="@+id/encrypt_button"
				app:layout_constraintRight_toRightOf="parent"
				/>
		<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/tx_history"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="30dp"
				app:layout_constraintTop_toBottomOf="@id/encrypt_button"
				/>
	</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
