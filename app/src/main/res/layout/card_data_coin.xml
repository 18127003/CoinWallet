<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
    android:paddingHorizontal="10dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/data_coin_market"
                  style="@style/h5.black"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  style="@style/h5.black"

                  android:id="@+id/name"
                  android:paddingHorizontal="5dp"
        />
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
    android:padding="5dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/price"
                  />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                  android:text="28.2333US$"
                  android:id="@+id/price"
                  android:paddingHorizontal="5dp"
                  android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <View
            android:layout_marginHorizontal="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
    android:padding="5dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/marketCapitalization"
                 />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="58.82434754US$"
                  android:id="@+id/market_capitalization"
                  android:paddingHorizontal="5dp"
                  android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <View
            android:layout_marginHorizontal="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
    android:padding="5dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/marketCapDominationIndex"
                 />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="58.82434754US$"
                  android:id="@+id/market_cap_domination_index"
                  android:paddingHorizontal="5dp"
                  android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <View
            android:layout_marginHorizontal="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
    android:padding="5dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/trading_volume"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="5882434754"
                  android:id="@+id/trading_volume"
                  android:paddingHorizontal="5dp"
                  android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <View
            android:layout_marginHorizontal="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
    android:padding="5dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/volume_and_marketCap"
                />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="0.7679"
                  android:id="@+id/volume_marketCap"
                  android:paddingHorizontal="5dp"
                  android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <View
            android:layout_marginHorizontal="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
    android:padding="5dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/low_high_24h"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="0.7679/8739284"
                  android:id="@+id/low_high_24h"
                  android:paddingHorizontal="5dp"
                  android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <View
            android:layout_marginHorizontal="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
    android:padding="5dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/low_high_week"
                  />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="0.7679/8739284"
                  android:id="@+id/low_high_week"
                  android:paddingHorizontal="5dp"
                  android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <View
            android:layout_marginHorizontal="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
    android:padding="5dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/ranking"
                  />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="#1"
                  android:id="@+id/ranking"
                  android:paddingHorizontal="5dp"
                  android:layout_alignParentRight="true"
        />
    </RelativeLayout>

</LinearLayout>