<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
		>
	<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/report_month_card"
			app:cardBackgroundColor="?attr/colorPrimary"
			>
		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginHorizontal="20dp">
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/report_time"
					style="@style/h5.black"
					app:layout_constraintTop_toTopOf="parent"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintLeft_toLeftOf="parent"
					/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/report_income"
					style="@style/normal.black"
					app:layout_constraintTop_toTopOf="@id/report_income_label"
					app:layout_constraintBottom_toTopOf="@+id/report_outcome"
					app:layout_constraintRight_toRightOf="parent"/>
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/report_outcome"
					style="@style/normal.black"
					app:layout_constraintTop_toBottomOf="@id/report_income"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintRight_toRightOf="parent"/>
			<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
			        android:id="@+id/report_income_label"
			        android:text="@string/income"
			        app:icon="@drawable/ic_arrow_upward"
			        style="@style/TextButton.Dark"
			        android:clickable="false"
			        app:layout_constraintTop_toTopOf="parent"
			        app:layout_constraintBottom_toTopOf="@id/report_outcome_label"
			        app:layout_constraintRight_toRightOf="parent"
			        app:layout_constraintLeft_toRightOf="@id/report_time"
			        android:backgroundTint="@color/zxing_transparent"
					/>
			<Button android:layout_width="wrap_content" android:layout_height="wrap_content"
			        android:id="@+id/report_outcome_label"
			        android:text="@string/outcome"
			        app:icon="@drawable/ic_arrow_downward"
			        style="@style/TextButton.Dark"
			        android:clickable="false"
			        app:layout_constraintTop_toBottomOf="@id/report_income_label"
			        app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintLeft_toLeftOf="@id/report_income_label"

					/>


		</androidx.constraintlayout.widget.ConstraintLayout>

	</androidx.cardview.widget.CardView>
	<androidx.recyclerview.widget.RecyclerView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/month_tx_list"
			android:layout_margin="15dp"
			>
	</androidx.recyclerview.widget.RecyclerView>
</LinearLayout>