<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".ui.fragments.MnemonicRestoreFragment">

	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<TextView
				android:id="@+id/restore_mnemonic_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/restore_mnemonic_label"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"/>
		<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/restore_mnemonic_list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@+id/restore_mnemonic_label"/>
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/cancel_button"
				android:text="@string/cancel_option"
				app:layout_constraintTop_toBottomOf="@id/restore_mnemonic_list"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"/>
	</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>