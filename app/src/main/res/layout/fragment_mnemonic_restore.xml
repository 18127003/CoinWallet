<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".ui.fragments.MnemonicRestoreFragment">

	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<TextView
				android:id="@+id/restore_mnemonic_label"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/restore_mnemonic_label"
				style="@style/h6.white"
				app:layout_constraintTop_toTopOf="parent"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toRightOf="parent"/>
		<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/mnemonic_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@id/restore_mnemonic_label"
				android:hint="@string/mnemonic"
				style="@style/TextInputLayoutWhite"
				android:layout_margin="20dp">
			<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/mnemonic_text_field"
					android:inputType="textMultiLine"/>
		</com.google.android.material.textfield.TextInputLayout>
		<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/restore_mnemonic_list"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:layout_constraintTop_toBottomOf="@+id/mnemonic_layout"
				android:layout_margin="20dp"/>
		<Button
				app:layout_constraintHorizontal_chainStyle="packed"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/cancel_button"
				android:text="@string/cancel_option"
				app:layout_constraintTop_toBottomOf="@id/restore_mnemonic_list"
				app:layout_constraintLeft_toLeftOf="parent"
				app:layout_constraintRight_toLeftOf="@id/restore_button"
				android:layout_margin="20dp"
				style="@style/ButtonStyle"/>
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/restore_button"
				android:text="Restore"
				app:layout_constraintTop_toBottomOf="@id/restore_mnemonic_list"
				app:layout_constraintRight_toRightOf="parent"
				app:layout_constraintLeft_toRightOf="@id/cancel_button"
				android:layout_margin="20dp"
				style="@style/ButtonStyle"/>
	</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>