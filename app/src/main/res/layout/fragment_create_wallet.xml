<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.fragments.CreateWalletFragment"
		>
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical">
		<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/label_layout"
				android:layout_marginHorizontal="30dp"
				android:layout_marginVertical="15dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/wallet_label"
				style="@style/TextInputLayoutWhite"
				android:paddingVertical="5dp">
			<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/label_text_field"
					style="@style/normal.black"
					android:inputType="text"/>
		</com.google.android.material.textfield.TextInputLayout>
		<Button
				android:layout_marginTop="15dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/create_wallet_btn"
				android:text="@string/create_btn_label"
				style="@style/ButtonStyle"/>
	</LinearLayout>

</FrameLayout>