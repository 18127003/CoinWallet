<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_margin="10dp"
												                                                      xmlns:app="http://schemas.android.com/apk/res-auto">
	<TextView android:layout_width="10dp"
	          android:layout_height="25dp"
	          android:id="@+id/rank_placeholder"
	          app:layout_constraintTop_toTopOf="parent"
	          app:layout_constraintBottom_toBottomOf="parent"
	          app:layout_constraintLeft_toLeftOf="parent"
	          android:background="@color/grey"
			/>
	<ImageView android:layout_width="25dp"
	           android:layout_height="25dp"
	           android:background="@color/grey"
	           app:layout_constraintTop_toTopOf="parent"
	           app:layout_constraintBottom_toBottomOf="parent"
	           app:layout_constraintLeft_toRightOf="@id/rank_placeholder"
	           android:id="@+id/image_placeholder"
	           android:layout_marginStart="10dp"
			/>
	<TextView android:layout_width="40dp"
	          android:layout_height="10dp"
	          android:id="@+id/symbol_placeholder"
	          app:layout_constraintTop_toTopOf="parent"
	          app:layout_constraintLeft_toRightOf="@id/image_placeholder"
	          app:layout_constraintBottom_toTopOf="@id/name_placeholder"
	          android:layout_marginHorizontal="10dp"
	          android:background="@color/grey"
			/>
	<TextView android:layout_width="40dp"
	          android:layout_height="10dp"
	          android:id="@+id/name_placeholder"
	          android:background="@color/grey"
	          app:layout_constraintBottom_toBottomOf="parent"
	          app:layout_constraintLeft_toLeftOf="@id/symbol_placeholder"
	          app:layout_constraintTop_toBottomOf="@id/symbol_placeholder"
			/>
	<TextView android:layout_width="35dp"
	          android:layout_height="10dp"
	          app:layout_constraintTop_toTopOf="parent"
	          app:layout_constraintRight_toRightOf="parent"
	          android:id="@+id/price_placeholder"
	          android:background="@color/grey"
			/>
	<TextView android:layout_width="30dp"
	          android:layout_height="10dp"
	          android:background="@color/grey"
	          app:layout_constraintBottom_toBottomOf="parent"
	          app:layout_constraintRight_toRightOf="parent"
	          android:id="@+id/fluctuation_placeholder"
	          app:layout_constraintTop_toBottomOf="@id/price_placeholder"/>

</androidx.constraintlayout.widget.ConstraintLayout>