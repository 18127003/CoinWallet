<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="subtitle" parent="@android:style/TextAppearance.Small">
		<item name="android:textSize">14sp</item>

		<item name="android:textColor">@color/grey</item>
	</style>
	<style name="h6.white" parent="@android:style/TextAppearance.Small">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/white</item>
	</style>
	<style name="h5" parent="@android:style/TextAppearance.Small">
		<item name="android:textSize">24sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/white</item>
	</style>
	<style name="h5.black" parent="@android:style/TextAppearance.Small">
		<item name="android:textSize">24sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="h6.black" parent="@android:style/TextAppearance.Small">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="normal" parent="@android:style/TextAppearance.Small">
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/white</item>
	</style>
	<style name="normal.black" parent="@android:style/TextAppearance.Small">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="SwitchCompatTheme" >
		<item name="colorControlActivated">@color/yellow</item>
		<item name="colorControlNormal">@color/white</item>
		<item name="color">@color/white</item>
	</style>
	<style name="OutlinedButtonLabel" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="boxBackgroundColor">@color/yellow</item>
		<item name="strokeColor">@color/yellow</item>
		<item name="boxStrokeWidth">2dp</item>
		<item name="android:textColor">@color/design_default_color_on_primary</item>
	</style>
	<style name="TransparentCardView" parent="Widget.MaterialComponents.CardView">
		<item name="cardBackgroundColor">@color/blue_black</item>
	</style>
	<style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
		<item name="android:textColor">@color/black</item>

		<item name="backgroundTint">@color/yellow</item>
	</style>
	<style name="TextInputLayoutWhite" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
		<item name="boxStrokeColor">@color/yellow</item>
		<item name="boxStrokeWidth">2dp</item>
		<item name="hintTextColor">@color/black</item>
		<item name="boxCornerRadiusBottomStart">8dp</item>
		<item name="boxCornerRadiusBottomEnd">8dp</item>
		<item name="boxCornerRadiusTopStart">8dp</item>
		<item name="boxCornerRadiusTopEnd">8dp</item>
		<item name="boxBackgroundColor">@color/white</item>
	</style>
	<style name="TextInputOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
		<item name="boxStrokeColor">@color/yellow</item>
		<item name="boxStrokeWidth">2dp</item>
		<item name="hintTextColor">@color/black</item>
		<item name="boxCornerRadiusBottomStart">8dp</item>
		<item name="boxCornerRadiusBottomEnd">8dp</item>
		<item name="boxCornerRadiusTopStart">8dp</item>
		<item name="boxCornerRadiusTopEnd">8dp</item>
	</style>
	<style name="fullWidthPopupMenu" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
		<item name="android:layout_width">match_parent</item>
	</style>
	<style name="TextButton" parent="@style/Widget.AppCompat.Button.Borderless" >
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#000</item>
		<item name="iconTint">#000</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:padding">0dp</item>
		<item name="android:layout_margin">0dp</item>
		<item name="android:minHeight">0dp</item>
		<item name="maxButtonHeight">2dp</item>
		<item name="iconSize">36px</item>
		<item name="android:gravity">left|center_vertical</item>
	</style>
	<style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
		<item name="colorPrimary">@color/yellow</item>
		<item name="android:textColorSecondary">@color/black</item>
	</style>
	<style name="RoundedCard" parent="@style/Widget.MaterialComponents.CardView">
		<item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
	</style>
	<style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
		<item name="cornerFamily">rounded</item>
		<item name="cornerSizeTopRight">24dp</item>
		<item name="cornerSizeTopLeft">24dp</item>
		<item name="cornerSizeBottomRight">24dp</item>
		<item name="cornerSizeBottomLeft">24dp</item>
	</style>
</resources>